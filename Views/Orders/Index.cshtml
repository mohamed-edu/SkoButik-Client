@model List<SkoButik_Client.Models.Order>

@{
    ViewData["Title"] = "All orders";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of all your orders</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Items</th>
                    <th>Total</th>

                    @*  //DEnna user nedanför *@
                    <th>User</th>
                    @*                     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    //lägg in user här
                    } *@
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td class="align-middle">@order.OrderId</td>
                        <td class="align-middle">
                            <ul style="list-style-type:none">
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>
                                        <div class="alert alert-info" role="alert">
                                            <span class="badge bg-success">@item.Amount</span> [@item.Price.ToString("c")] - @item.Products.ProductName
                                        </div>
                                    </li>
                                }
                            </ul>
                        </td>
                        <td class="align-middle">
                            @order.OrderItems.Select(m => m.Products.Price * m.Amount).Sum().ToString("c")
                        </td>
                        <td class="align-middle"> @order.UserId </td>
@*                     @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                  
                    } *@
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>