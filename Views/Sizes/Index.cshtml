@model IEnumerable<SkoButik_Client.Models.Size>

@{
    ViewData["Title"] = "Index";
}

<div style="text-align: center;">
<h1>Sizes</h1>
<div/>
<p>
    <a asp-action="Create" class="btn btn-success">Add Size</a>
</p>
<div class="container">
<div class="justify-content-center">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SizeName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SizeName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SizeId" class="btn btn-outline-primary">Edit</a> 
                   @*  <a asp-action="Details" asp-route-id="@item.SizeId" class="btn btn-outline-primary">Details</a>  *@
                    <a asp-action="Delete" asp-route-id="@item.SizeId" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
</div>
